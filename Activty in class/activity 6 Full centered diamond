n = 4  # Controls height (adjust as needed)

# Top half
for i in range(n):         
    for s in range(n - i - 1):  # Print spaces
        print(" ", end="")
    for j in range(i + 1):      # Print stars
        print("*", end=" ")
    print()

# Bottom half
for i in range(n - 2, -1, -1):  
    for s in range(n - i - 1):  # Print spaces
        print(" ", end="")
    for j in range(i + 1):      # Print stars
        print("*", end=" ")
    print()